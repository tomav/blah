<h1>Listing links</h1>

<table>
  <tr>
    <th>Long url</th>
    <th>Short url</th>
  </tr>

<% @links.each do |link| %>
  <tr>
    <td><%=h link.long_url %></td>
    <td><%=h link.short_url %></td>
    <td><%= link_to 'Show stats', link %></td>
    <td><%= link_to 'Destroy', link, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New link', new_link_path %>