<h1>New link</h1>

<% form_for(@link) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :long_url %><br />
    <%= f.text_area :long_url %>
  </p>
  <p>
    <%= f.label :domain_id %><br />
    <%= select :link, :domain_id, @domains.collect{|p| [p.name, p.id]}, {:include_blank => false } %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', links_path %>