<% @page_title = "URL Shorter" %>
<h1><%= @page_title %></h1>

<h3>Welcome <%= link_to current_user.username, '/users/current/edit' %></h3>

<p><%= link_to 'See all my links', links_path %></p>

<% form_for(@link) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :long_url %><br />
    <%= f.text_area :long_url %>
  </p>
  <p>
    <%= f.label :domain_id %><br />
    <%= select :link, :domain_id, Domain.all.collect{|p| [p.name, p.id]}, {:include_blank => false } %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', links_path %>